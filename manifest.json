{
	"name": "Full Size Instagram Right Click",
	"description": "Right click Instagram photos to view or save full size images",
	"version": "0.0.0.3",
	"manifest_version": 2,
	"icons": {
		"16": "/icons/icon.png",
		"32": "/icons/icon32.png",
		"48": "/icons/icon48.png",
		"64": "/icons/icon64.png",
		"128": "/icons/icon128.png"
	},
	"browser_action":{
		"default_icon": "/icons/icon.png"
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"*://*.instagram.com/*"
	],
	"background": {
		"scripts": ["/background.js"],
		"matches": ["*://*.instagram.com/*"],
		"persistent": true	
	}
}
